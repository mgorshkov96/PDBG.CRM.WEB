@model PDBG.CRM.WEB.Models.Lead;

@{
	ViewData["Title"] = "Заявка " + Model.Id;
}
<div class="lead">
	<h1>Заявка @Html.DisplayFor(m => m.Id) от @Model.Created.ToString("dd.MM.yyyy")</h1>
	<div class="lead-values">
		<table>
			<tr>
				<td class="lead-table-header">Статус</td>
				<td>@Html.DisplayFor(m => m.Status.Name)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Поступила в</td>
				<td>@Model.Created.ToString("HH:mm")</td>
			</tr>
			<tr>
				<td class="lead-table-header">Диспетчер</td>
				<td>@Html.DisplayFor(m => m.Disp.Name)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Адрес</td>
				<td>@Html.DisplayFor(m => m.Address)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Примечание к адресу</td>
				<td>@Html.DisplayFor(m => m.NoteToAddress)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Комментарий диспетчера</td>
				<td>@Html.DisplayFor(m => m.Comment)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Умерший</td>
				<td>@Html.DisplayFor(m => m.Dead)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Агент</td>
				<td>@Html.DisplayFor(m => m.Agent.Name)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Сумма</td>
				<td>@Html.DisplayFor(m => m.Sum)</td>
			</tr>
			<tr>
				<td class="lead-table-header">Причина отказа</td>
				<td>@Html.DisplayFor(m => m.RejectionReason)</td>
			</tr>
		</table>
	</div>
</div>