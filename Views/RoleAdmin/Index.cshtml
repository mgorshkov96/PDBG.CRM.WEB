@using Microsoft.AspNetCore.Identity;
@using PDBG.CRM.WEB.Models;
@using PDBG.CRM.WEB.Infrastructure;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper PDBG.CRM.WEB.Infrastructure.*, PDBG.CRM.WEB
@model List<IdentityRole>

<div class="content">
	<h1>Роли</h1>
	<div class="text-danger" asp-validation-summary="ModelOnly"></div>

	<div class="leads-table">
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>Имя</th>
					<th>Пользователи</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				@if (Model.Count() == 0)
				{
					<tr><td colspan="4">Роли не найдены</td></tr>
				}
				else
				{
					foreach (var role in Model)
					{
						<tr>
							<td>@role.Id</td>
							<td>@role.Name</td>
							<td identity-role="@role.Id"></td>
							<td>
								<form asp-action="Delete" asp-route-id="@role.Id" method="post">
									<a class="ref-btn ref-in-table-form" asp-action="Edit" asp-route-id="@role.Id">Изменить</a>
									<button type="submit">Удалить</button>
								</form>
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>


	<a class="ref-btn" asp-action="Create">Создать</a>
</div>