@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using PDBG.CRM.WEB.Models;
@model IEnumerable<AppUser>

<div class="content">
	<h1>Пользователи</h1>

	<div class="leads-table">
		<table>
			<thead>
				<tr>
					<th>ID</th>
					<th>Имя</th>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				@if (Model.Count() == 0)
				{
					<tr><td colspan="4">Пользователи не найдены</td></tr>
				}
				else
				{
					foreach (var user in Model)
					{
						<tr>
							<td>@user.Id</td>
							<td>@user.UserName</td>
							<td>@user.Email</td>
							<td>
								<form asp-action="Delete" asp-route-id="@user.Id" method="post">
									<a class="ref-btn ref-in-table-form" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
									<button type="submit">Удалить</button>
								</form>
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
	

	<a class="ref-btn" asp-action="Create">Создать</a>
</div>
