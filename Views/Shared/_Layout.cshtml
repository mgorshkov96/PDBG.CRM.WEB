@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/site.css" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="flex-container">
        <header class="flex-header">
            <div class="logo">
                <img src="~/ico/logo_black.svg" />
            </div>
            <div class="app-title">
                <span>PDBG-CRM</span>
            </div>
            <div class="account">
                <ul>
                    <li>
                        <a id="btn-account" class="menu-ref" href=" #">Аккаунт</a>
                        <ul id="sub-account" class="sub-account">
                            <li><a asp-controller="Account" asp-action="Logout">Выход</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </header>
        <div class="flex-content">
            <nav class="flex-nav menu">
                <ul class="menu">
                    <li>
                        <span class="menu-first">Местоположение</span>
                        <ul class="submenu">
                            <li><a class="menu-ref" href="~/Map/AgentsOnMap">Агенты на карте</a></li>
                            <li><a class="menu-ref" href="#">История перемещений</a></li>
                        </ul>
                    </li>
                    <li>
                        <span class="menu-first">Заявки</span>
                        <ul class="submenu">
                            <li><a class="menu-ref" href="~/Leads/List">Список заявок</a></li>
                            <li><a class="menu-ref" href="#">Заявки в работе</a></li>
                        </ul>
                    </li>
                    <li>
                        <span class="menu-first">Настройки</span>
                        <ul class="submenu">
                            <li><a class="menu-ref" asp-controller="Admin" asp-action="Index">Пользователи</a></li>
                            <li><a class="menu-ref" asp-controller="RoleAdmin" asp-action="Index">Роли</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
            <main>
                @RenderBody()
            </main>
        </div>
    </div>
    <script src="~/js/account.js"></script>
</body>
</html>
